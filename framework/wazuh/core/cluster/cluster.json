{
    "files":{

        "": {
            "permissions": "0o640",
            "source": "master",
            "files": ["private_key.pem", "public_key.pem"],
            "recursive": false,
            "restart": false,
            "remove_subdirs_if_empty": false,
            "extra_valid": false,
            "description": "JWT signing key pair"
        },

        "shared": {
            "permissions": "0o660",
            "source": "master",
            "files": ["all"],
            "recursive": false,
            "restart": false,
            "remove_subdirs_if_empty": true,
            "extra_valid": false,
            "description": "group files"
        },

        "excluded_files": [
            "ar.conf"
        ],

        "excluded_extensions": [
            "~",
            ".tmp",
            ".lock",
            ".swp"
        ]
    },

    "intervals":{
        "worker": {
            "sync_integrity": 9,
            "keep_alive": 60,
            "connection_retry": 10,
            "max_failed_keepalive_attempts": 2
        },

        "master": {
            "process_pool_size": 2,
            "timeout_extra_valid": 40,
            "recalculate_integrity": 8,
            "check_worker_lastkeepalive": 60,
            "max_allowed_time_without_keepalive": 120,
            "max_locked_integrity_time": 1000
        },

        "communication":{
            "timeout_cluster_request": 20,
            "timeout_dapi_request": 200,
            "timeout_receiving_file": 120,
            "max_zip_size": 1073741824,
            "min_zip_size": 31457280,
            "compress_level": 1,
            "zip_limit_tolerance": 0.2
        }
    },

    "distributed_api": {
        "enabled": true
    }
}
